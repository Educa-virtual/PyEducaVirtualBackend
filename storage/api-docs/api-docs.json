        "/api/login": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Login de usuario",
                "description": "Autentica un usuario y retorna un token JWT junto con la data del usuario.",
                "operationId": "0979b4ec1ef4a149b82d179946612831",
                "parameters": [
                    {
                        "name": "user",
                        "in": "query",
                        "description": "Usuario",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "pass",
                        "in": "query",
                        "description": "Contraseña del usuario",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "minLength": 6
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Errores de autenticación posibles:\n     *                      - Usuario o contraseña incorrectos\n     *                      - Su usuario está desactivado, contacte con el área de soporte\n     *                      - Su cuenta ha expirado, contacte con el área de soporte)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "validated": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Usuario o contraseña incorrectos"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Inicio de sesión correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "accessToken": {
                                            "description": "JWT token",
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "description": "Tiempo de duración del token",
                                            "type": "integer"
                                        },
                                        "user": {
                                            "description": "Data del usuario",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
