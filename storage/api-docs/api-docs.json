        "parameters": {
            "iCredEntPerfId": {
                "name": "iCredEntPerfId",
                "in": "header",
                "description": "Id de la credencial a nivel entidad y perfil",
                "required": true,
                "schema": {
                    "type": "integer"
                }
            },
            "Accept": {
                "name": "Accept",
                "in": "header",
