    "paths": {
        "/api/acad/estudiantes/buzon-sugerencias": {
            "get": {
                "tags": [
                    "Buzón de sugerencias"
                ],
                "summary": "Lista las sugerencias registradas por el alumno, que no estén marcadas como eliminadas.",
                "operationId": "e2f5b162600e28e212f71b87c0a8e69c",
